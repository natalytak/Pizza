<h1 style="text-align: center">PIZZA PIZZA!</h1>
<img src="{{{../public/assets/images/pizzaEveryday.jpg}}}" alt="{{pizza_picture}}">

<div class="row">
  <div class="col-md-6">
    {{!-- <h2>List of pizzas:</h2> --}}

    <ol class="notDevouredPizzas">
  {{#each pizzas}}
  {{!-- <li>{{pizza_name}}
    {{!-- <button class="delete-pizza" data-id="{{this.id}}">DELETE!</button> --}}
  {{!-- </li> --}}
    {{#unless isDevoured}}
      {{> pizzas/pizza-block isDevoured=true}}
    {{/unless}}
  {{/each}}
</ol>

  </div>
  <div class="col-md-6">
      {{!-- <h2>List of pizzas that you devoured:</h2> --}}

<ol class="devouredPizzas">
  {{#each pizzas}}
    {{#if isDevoured}}
    <li>{{pizza_name}}
      <button class="delete-pizza" style="float:right" data-id="{{this.id}}">Delete!</button>
    </li>
    {{/if}}
  {{/each}}
</ol>
  </div>
</div>
<div class="add">
<h3>Add a Pizza</h3>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name"><br>
    <button type="submit" class="btn btn-danger">SUBMIT</button>
    </br>Enter the pizza you'd like to eat and click on SUBMIT button.
  </div>
</form>
</div>
